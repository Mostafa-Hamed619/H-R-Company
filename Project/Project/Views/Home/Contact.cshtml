@model Contacting
@{
    var info = ViewData["info"] as Project.Models.information;
}

<section id="contact-us">
    <div class="bg mt-5">
        <h1 class="p-3">contact us</h1>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Get in contact with a logistic specialist.</h1>
                <p>Our team is happy to answer your logistics questions. Fill out the form and we'll be in touch as soon as possible </p>
                <h4 class="mt-3">@info.Street</h4>
                <ul class="mt-5">
                    <li><i class="fa-solid fa-phone"><a href="tel:+1 (213) 335-7399" style="color:black"><strong>+1 </strong>@info.Phone</a></i></li>
                    <li><i class="fa-solid fa-envelope"><a href="mailto:@info.EmaiAddress" style="color:black">@info.EmaiAddress</a></i></li>


                </ul>
            </div>
            <div class="col-md-6">
                <form method="post" asp-action="Contact" asp-controller="Home">
                    <label asp-for="FirstName">first name</label><br>
                    <input type="text" required placeholder="first name" asp-for="FirstName" class="form-control" id="first"><br>
                    <label asp-for="LastName">last name</label><br>
                    <input type="text" required placeholder="last name" asp-for="LastName" class="form-control" id="last"><br>
                    <label asp-for="PhoneNumber">phone</label>
                    <input type="number" required placeholder="phone" asp-for="PhoneNumber" class="form-control" id="phone"><br>
                    <label asp-for="Email">email</label>
                    <input type="email" class="form-control" id="email" required placeholder="email address" asp-for="Email">
                    <label>message</label>
                    <textarea class="form-control" asp-for="Message"></textarea>
                    <button class="btn btn-danger mt-3" type="submit">submit</button>

                </form>
            </div>
        </div>


    </div>
    <div class="mt-4 bg text-white text-center">
        <div class="row">
            <div class="col-md-4">
                <div class="p-4">
                    <h1>You call, We haul, That’s All!</h1>
                    <a asp-action="Contact" asp-controller="Home">
                        <button class="btn btn-danger">contact us</button>
                    </a>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <h3>site map</h3>
                <ul>
                    <li><a asp-action="Index" asp-controller="Home">Individual Funding</a></li>
                    <li><a asp-action="Services" asp-controller="Home">Services</a></li>
                    <li><a asp-action="About" asp-controller="Home">About Us</a></li>
                    <li><a asp-action="Career" asp-controller="Home">Careers</a></li>
                    <li><a asp-action="Blog" asp-controller="Home">Blog</a></li>
                    <li><a asp-action="Contact" asp-controller="Home">contact us</a></li>


                </ul>
            </div>
            <div class="col-md-4">
                <h3>Connect with Us</h3>
                <h6>address:@info.Street</h6>
                <h6><i class="fa-solid fa-phone"><a href="tel:+1 (213) @info.Phone" style="color:black"><strong>+1 </strong>@info.Phone</a></i></h6>

            </div>
        </div>
    </div>
</section>
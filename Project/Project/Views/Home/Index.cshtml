@model Project.Models.newsLetters;
@{
    var info = ViewData["info"] as Project.Models.information;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .layer-photo {
            background-image: url(~/wwwroot/photos/6.jpg);
            background-repeat: no-repeat;
            background-position: center center;
            background-size: cover;
            width: 100%;
            height: 100vh;
        }
    </style>
</head>
<body>
    <section id="home">
        <header>
            <div class="layer-photo  d-flex justify-content-center align-items-center text-center">
                <img src="~/photos/6.jpg" class="w-100">
            </div>

        </header>
        <section class="mt-5" style="padding:200px">
            <div class="container">
                <h1 class="mb-3 color1">Freight Shipping Solutions</h1>
                <div class="row g-3">
                    <div class="col-md-6">
                        <img src="photos/1.jpg" class="w-100">
                    </div>
                    <div class="col-md-6">
                        <img src="photos/3.jpg" class="w-100">
                    </div>
                    <div class="col-md-6">
                        <img src="photos/4.jpg" class="w-100">
                    </div>
                    <div class="col-md-6">
                        <img src="photos/5.jpg" class="w-100">
                    </div>
                    <div class="col-md-6">
                        <img src="photos/6.jpg" class="w-100">
                    </div>
                    <div class="col-md-6">
                        <img src="photos/11.jpg" class="w-100">
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <a asp-action="services" asp-controller="Home" class="btn btn-danger mt-5">
                        learn more
                    </a>
                </div>
            </div>

        </section>
    </section>

    <section>
        <div class="container">
            <h3 class="text-center mt-5 color1">Over 4,000 companies around the world trust H&W Group</h3>
            <div class="row mt-4">
                <div class="col-md-2">
                    <img src="photos/m1.png" class="w-100">
                </div>
                <div class="col-md-2">
                    <img src="photos/m2.png" class="w-100">
                </div>
                <div class="col-md-2">
                    <img src="photos/m3.png" class="w-100">
                </div>
                <div class="col-md-2">
                    <img src="photos/m4.png" class="w-100">
                </div>
                <div class="col-md-2">
                    <img src="photos/m5.png" class="w-100">
                </div>
                <div class="col-md-2">
                    <img src="photos/m6.png" class="w-100">
                </div>
            </div>
        </div>


    </section>
    <section>
        <div class="bg mt-5">
            <h2 class="text-center p-5 text-white">We give you peace of mind while getting you the best carrier possible according to your needs.</h2>
        </div>
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-6">
                    <h2>Subscribe to our newsletter.</h2>
                    <h6 class="mt-3">Sign up with your email address to receive news and updates.</h6>
                </div>
                <div class="col-md-6">
                    <form method="post">
                        <input type="email" class="form-control w-50" required placeholder="email address" asp-for="Email">
                        <button class="btn btn-danger mt-3" type="submit">sign up</button>
                    </form>
                </div>

            </div>
        </div>
        <div class="mt-4 bg text-white text-center">
            <div class="row">
                <div class="col-md-4">
                    <div class="p-4">
                        <h1>You call, We haul, That’s All!</h1>
                        <a asp-action="Contact" asp-controller="Home">
                            <button class="btn btn-danger">contact us</button>
                        </a>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <h3>site map</h3>
                    <ul>
                        <li><a asp-action="Index" asp-controller="Home">Individual Funding</a></li>
                        <li><a asp-action="Services" asp-controller="Home">Services</a></li>
                        <li><a asp-action="About" asp-controller="Home">About Us</a></li>
                        <li><a asp-action="Career" asp-controller="Home">Careers</a></li>
                        <li><a asp-action="Blog" asp-controller="Home">Blog</a></li>
                        <li><a asp-action="Contact" asp-controller="Home">contact us</a></li>


                    </ul>
                </div>
                <div class="col-md-4">
                    <h3>Connect with Us</h3>
                    <h6>address:@info.Street</h6>
                    <h6><i class="fa-solid fa-phone"><a href="tel:+1 (213) @info.Phone" style="color:black"><strong>+1 </strong>@info.Phone</a></i></h6>

                </div>
            </div>
        </div>
    </section>
</body>
</html>
